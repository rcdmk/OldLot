@model OldLot.Web.ViewModels.VeiculoViewModel
@{
    ViewBag.Title = "Visualizar: " + Model.Nome;
}
<div>
    <h4>Veículo</h4>
    @if (!ViewBag.parcial)
    {
        <hr />
    }
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayNameFor(model => model.Nome)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Nome)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.Ano)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Ano)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.Fabricante)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Fabricante)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.Tipo)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Tipo)
        </dd>

    </dl>
</div>
@if (!ViewBag.parcial)
{
    <p>
        @Html.ActionLink("Voltar", "Index", null, new { @class = "btn btn-default" })
        @Html.ActionLink("Alterar", "Alterar", new { id = Model.Id }, new { @class = "btn btn-primary" })
    </p>
}
