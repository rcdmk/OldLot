@model IEnumerable<OldLot.Web.ViewModels.VeiculoViewModel>
@{
    ViewBag.Title = "Coleção";
}

<div class="row">
    <div class="col-md-12">
        <h2>Coleção Atual</h2>

        <div class="well well-sm">
            @Html.ActionLink("Novo", "Incluir", "Veiculo", null, new { id = "btnIncluir", @class = "btn btn-primary" })
        </div>
        <div class="table-responsive">
            <table id="tbl" class="table table-striped table-responsive">
                <thead>
                    <tr class="active text-info">
                        <th>Nome</th>
                        <th>Fabricante</th>
                        <th>Tipo</th>
                        <th class="col-md-1 text-right">Ano</th>
                        <th class="col-md-1">&nbsp;</th>
                    </tr>
                </thead>
                <tbody>
                    @if (Model.Count() > 0)
                    {
                        foreach (var item in Model)
                        {
                            <tr>
                                <td>@Html.DisplayFor(mi => item.Nome)</td>
                                <td>@Html.DisplayFor(mi => item.Fabricante)</td>
                                <td>@Html.DisplayFor(mi => item.Tipo)</td>
                                <td class="text-right">@Html.DisplayFor(mi => item.Ano)</td>
                                <td class="text-center">
                                    <a href="@Url.Action("Visualizar", "Veiculo", new { id = item.Id })" title="visualizar" class="visualizar"><i class="glyphicon glyphicon-eye-open text-primary"></i></a>
                                    <a href="#@Url.Action("Alterar", "Veiculo", new { id = item.Id })" title="alterar" class="alterar disabled"><i class="glyphicon glyphicon-edit text-success"></i></a>
                                    <a href="@Url.Action("Excluir", "Veiculo", new { id = item.Id })" title="excluir" class="excluir"><i class="glyphicon glyphicon-trash text-danger"></i></a>
                                </td>
                            </tr>
                        }
                    }
                    else
                    {
                        <tr>
                            <td colspan="5" class="text-muted text-center">Nenhum registro disponível.</td>
                        </tr>
                        }
                </tbody>
            </table>
            @section scripts
            {
                @Scripts.Render("~/bundles/site")
            }
        </div>
    </div>
</div>